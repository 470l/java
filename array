    		
    	String input = JOptionPane.showInputDialog("enter lowercase letter");
 
    	int [] alphabet = new int [26];                                     //zhmarae petakane englizya 
    	
    	for(int i = 0 ; i < input.length() ; i++) {
    		
    		int ascii = (int)(input.charAt(i));                               //bo darhenane ascii petakan
    	
    		if(ascii >= 97 && ascii <= 122)
    			alphabet[ascii-'a']++ ;                     //grngtreen basha lam programa wata har peteke 
    		                                                //daxl krd ledarkrne a wata 97 bka bashan 
    		                                                //bzana chan darachet bo nmuna agar inputaka a bet 
    		                                                //awa a-a yan 'a' ledarkrdne 97 akata 0 boya index
    		                                                //yakam ++ yak xal zhya akat 
        	}
    	
    	for(int e = 0  ; e < alphabet.length ; e++ ) {
    		if( alphabet[e] > 0 ) {
    		char ch =(char)(e+97);                         // lera index yakam bretya la 0 + 97 wata akat a pashan 
    		                     						   //alphabeta savman krdwa ka index 0 taebata ba a lawe peman
    		                                 			   //chanjar dubara botawa 
    		
    		System.out.println(ch+" : " + alphabet[e]);
    		}
    	}
        
