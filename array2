// ****** agar yakam pett zane bbet ba a*****
   
   
   String[] Guess = {"program"};
      char[] hide = new char[Guess[0].length()];

      //arayak anasenen bo awaea ***** peshan byat agar petakae zane *bgoren ba petaka
      for(int i = 0 ; i < Guess[0].length() ; i++)
         hide[i] = '*' ;





           char input  ;
           //forek bo drezhe Stringe program chunka pewestman ba lengthe program abet bo dawakredne zhmarae inputakan
           for(int i = 0 ; i < Guess[0].length() ; i++){

              System.out.println("Guess the "+(i+1)+" litter here : ");    //pe ble yak letter daxl bka 
              input = sc.next().charAt(0);                                 //lettare i wata yakam daxl akat 

              while(input != Guess[0].charAt(i)){                           //agar naezane pe ble hawlba ta aezanet 
                 System.out.println("try Again : ");
                 input = sc.next().charAt(0);                                        

              }

              if(input == Guess[0].charAt(i)){                           //agar zane awa ****** bo bgora baw petae ka zane p*****
                 hide[i] = input ;
              }
              System.out.println("oky you know the "+(i+1)+" letter let's see next letter");
              for(char e : hide)                                       //peshandane awae ka che zanewa 
                 System.out.print(e);

              System.out.println();


           }
      System.out.println("well done you win the hiding game");



